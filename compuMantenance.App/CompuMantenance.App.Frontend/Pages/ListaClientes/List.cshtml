@page
@model CompuMantenance.App.Frontend.Pages.ListModelListaClientes
@{
}

<h1 class="mt-3 bg-secondary text-light text-center rounded">Listado de Clientes</h1>

<table class="table">
    <th class = "text-center">ID</th>
    <th>Nombre Completo</th>
    <th class = "text-center">Numero Telefónico</th>
    <th class = "text-center">Consultar Detalle</th>
    <th class = "text-center">Editar Cliente</th>


    @foreach (var cliente in Model.clientes)
    {
        <tr>
            <td class = "text-center">@cliente.Id</td>            
            <td>@cliente.Nombre @cliente.Apellidos</td>
            <td class = "text-center">@cliente.NumeroTelefono</td>
            <td class = "text-center">
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-clienteId="@cliente.Id">
                    <i class="bi bi-list-columns-reverse"></i> Detalle
                </a>
            </td>
            <td class = "text-center">
                <a class="btn btn-success table-btn" asp-page="./Edit" asp-route-clienteId="@cliente.Id">
                    <i class="bi bi-pen"></i> Editar
                </a>
            </td>
        </tr>
    }

</table>

<a asp-page="./Edit" class="btn btn-primary">Adicionar Cliente</a>